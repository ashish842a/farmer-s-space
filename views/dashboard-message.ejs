<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <title>Profile</title>
    <style>
        #email{
            min-width: 250px;
        }
        .msg1{
            min-width:400px ;
            border: 1px solid red;
        }
    </style>
</head>
<body>
    <div id="main">
        <div class="container">
            <div class="left">
                <div class="top-left">
                    <h1 id="logo">Farmer's Space</h1>
                    <div class="links">
                        <a href="/profile"><i class="ri-home-3-line"></i>Home</a>
                        <a href="/dashboard"><i class="ri-user-line"></i>Profile</a>
                        <a href="/dashboard-order"><i class="ri-shopping-bag-3-line"></i>Order</a>
                        <a href="/dashboard-rent"><i class="ri-shopping-bag-3-line"></i>Rent product</a>
                        <a href="/profile/#contact"><i class="ri-contacts-book-2-line"></i>Contact</a>
                        <a href="/profile/#services"><i class="ri-book-3-line"></i>Services</a>
                        <a href="/dashboard-message"><i class="ri-message-line"></i>Messages</a>
                    </div>
                </div>
                <div class="bottom-left">
                    <!-- <img src="https://images.unsplash.com/photo-1674851993254-15766f31879f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyfHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=500&q=60" alt=""> -->
                    <img src="/images/uploads/<%=loginUser.profilePic%>" alt="">

                     <h4><%=loginUser.name%></h4>
                </div>
            </div>
            <div class="right">
                <div class="right-nav">
                    <div class="right-nav-top">
                        <h1>My Messages</h1>
                        <a href="/logout"><button class="btn">Log Out</button></a>
                    </div>
                </div>
                <div id="message-page">
                    <div class="message-list">
                        <div class="label">
                            <h4>Name</h4>
                            <h4>Phone No.</h4>
                            <h4 >Email</h4>
                            <h4 class="msg">Message</h4>
                            <h4>Date</h4>
                            <h4>Status</h4>
                        </div>
                        <!-- message area -->
                        <div class="messages-box">
                           
                            <%arr.forEach(function(elem){%>
                                <div class="dets">
                                    <h4><%=elem.name%></h4>
                                    <h4><%=elem.phone%></h4>
                                    <h4 id="email"><%=elem.email%></h4>
                                    <h4 class="msg1"><%=elem.message%></h4>
                                    <h4>12-02-2023</h4>
                                    <h4 class="status">On Process</h4>
                                </div>
                            <%})%>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
</body>
</html>