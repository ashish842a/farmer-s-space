    <script>
        // move to top
        window.onscroll = function () { display() };
        function display() {
            var icon = document.getElementById("move_top");
            // console.log(window.scrollY);
            if (window.scrollY > 500) {
                icon.style.display = "initial";
            }
            else {
                icon.style.display = "none";
            }
        }
        function getBackToBeginning() {
            window.scrollTo(0, 0);
        }
        // window.onload = function () {
        //     //hide the preloader
        //     setTimeout(function () {

        //         document.querySelector(".loader-pre").style.display = "none";
        //     }, 200)
        // }


        const nav = document.querySelector('nav');
        const icon = document.querySelector('#nav-responsive');
        icon.addEventListener("click",function(){
            let navStyle = document.querySelector(".show").style
            if (navStyle.display === "flex") {
                navStyle.display = "none";
                nav.style.backgroundColor="#fff";
            } else {
                navStyle.display = "flex";
                nav.style.backgroundColor="#a7f0ba56";
            }

             if (icon.classList.contains('ri-menu-line')) {
                icon.classList.remove('ri-menu-line');
                icon.classList.add('ri-close-fill');
                } else {
                icon.classList.remove('ri-close-fill');
                icon.classList.add('ri-menu-line');
            }
        })



        let num = document.querySelectorAll(".btn")

        num.forEach(elem => {
            let data = elem.addEventListener("click", function (dets) {

                // console.log(dets.target.parentElement.firstElementChild.textContent);
                console.log(dets.target.previousElementSibling.previousElementSibling.previousElementSibling.textContent);

                // clutter="";
                dets.target.previousElementSibling.href=`/product/${dets.target.previousElementSibling.previousElementSibling.previousElementSibling.textContent}`
                console.log(dets.target.previousElementSibling);
                dets.target.previousElementSibling.click()
                document.querySelector("dets.target.previousElementSibling").click();
                // document.querySelector(".href").click();
                // console.log(dets.target.previousElementSibling.href="/product/shjsh");
            })
        });


    </script>
