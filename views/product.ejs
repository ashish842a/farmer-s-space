<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/product.css">


    <title>Products</title>
</head>
    <style>
        .noProduct{
            min-width: 100%;
            min-height: 70%;
            display: flex;
            align-content: center;
            justify-content: center;
            /* background-color: antiquewhite; */
        }
        /* img{
            width: 100%;
            height: 130%;
            background-size: cover;
        } */
    </style>
<body>
    <%- include ./partials/nav.ejs %>
        <div id="main">
            <div id="tractor">
                <h2>
                    <%= product.category%>
                </h2>


               <%if(product.length==0){%>
                <div class="noProduct">
                    No product is available
                </div>
              <% }else{%>
                <div class="cards">
                    <% product.forEach(function(elem){%>
                      <div class="card">
                          <div class="image">
                              <img src="/images/tractor.png" alt="">
                              <!-- <img src="/images/uploads/<%=elem.rentproductimage%>" alt=""> -->
                          </div>
                          <div class="desc">
                              <h4><%= elem.category%></h4>
                              <p>Rent Charge Upto <%= elem.time%>hr</p>
                              <h3 class="c-pink">Rs.<%= elem.price%></h3>
                              <p>⭐⭐⭐⭐</p>
                          </div>
                          <a href="/borrow/<%= elem._id%>" class="pink">Barrow</a>
                      </div>
                    <%})%>
                  </div>
               <%}%>
            </div>

            <%- include ./partials/footer.ejs %>

        </div>
</body>

</html>